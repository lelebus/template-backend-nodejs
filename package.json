    "@types/bcryptjs": "^2.4.2",
    "apollo-server": "^3.6.1",
    "apollo-server-core": "^3.10.1",
    "apollo-server-express": "^3.6.3",
    "array-foreach-async": "^1.0.1",
    "aws-sdk": "^2.1183.0",
